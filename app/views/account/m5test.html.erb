<!DOCTYPE html>
<html>
  <head>
    <title>Mkapp</title>
  </head>

  <body>
    <p>M5Test用<br>ログイン確認ページ</p>

    <%= form_with url: login_path, local: true do |form| %>
      <div>
        <%= form.label :role, '役割' %>
        <%= form.select :role, [['管理者', 'admin'], ['使用者', 'user']], {}, { class: 'form-control' } %>
      </div>

      <div>
        <%= form.label :username, 'ユーザー名' %>
        <%= form.text_field :username, class: 'form-control' %>
      </div>

      <div>
        <%= form.label :password, 'パスワード' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <div>
        <%= form.submit 'ログイン', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to '管理者ログイン', login_d_path %>
    <%= link_to '通常ログイン', login_path %>


    <%= yield %>
  </body>
</html>
